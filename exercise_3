import java.util.Stack;

public class App {
    public static void main(String[] args) {

        Stack<String> book = new Stack<>();

        book.push("English");
        book.push("Math");
        book.push("Science");
        book.push("History");

        System.out.println("The top of the stack is: " + book.peek());

        System.out.println("You have " + book.size() + " books " + book);

        book.pop();

        System.out.println(" Next in the stack is: " + book.peek());

    }
}
